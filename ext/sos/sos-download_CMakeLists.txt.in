cmake_minimum_required(VERSION 3.0)

project(sos NONE)

include(ExternalProject)
ExternalProject_Add(libsos
  GIT_REPOSITORY    "https://github.com/DavidPoliakoff/sos_flow.git"
  SOURCE_DIR        "${CMAKE_CURRENT_BINARY_DIR}/sos-download/sos-src"
  BINARY_DIR        "${CMAKE_CURRENT_BINARY_DIR}/sos-download/sos-build"
  INSTALL_DIR       ""
  CMAKE_ARGS        "-DCMAKE_INSTALL_PREFIX=${CMAKE_INSTALL_PREFIX};-DSOSD_CLOUD_SYNC_WITH_EVPATH=ON;-DSOSD_CLOUD_SYNC_WITH_MPI=OFF;-DCMAKE_RELEASE_TYPE=Debug;-DCMAKE_C_FLAGS=-g;-DCMAKE_CXX_FLAGS=-g;--verbose"
)
